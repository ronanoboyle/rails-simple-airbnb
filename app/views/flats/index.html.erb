<div class="container pt-2">
    <div>
        <h2 class="align-self-stretch">All out flats (<%= @flats.count %>)</h2>
    </div>
    <div class="d-flex col-12 flex-wrap">
        <% @flats.each do |flat| %>
        <div class="col-4">
            <div class="card m-2">
            <img class="card-img-top" src="https://picsum.photos/200/100" alt="Card image cap">
                <div class="h-100 card-body border-bottom p-4">
                    <h4 class="card-title"><%= flat.name %></h4>
                    <p class="card-text"><%= flat.address %></p>
                     <div class="d-flex">
                        <div class="d-flex">
                            <i class="fa-solid fa-user-group align-self-center"></i>
                            <p class=""><%= flat.number_of_guests %></p>
                        </div>
                        <div class="d-flex ms-4">
                            <i class="fa-solid fa-euro-sign align-self-center"></i>
                            <p class=""><%= flat.price_per_night %></p>
                        </div>
                    </div>
                </div>
                <div class="d-flex p-3 justify-content-between">
                  <%= link_to "More info", flat_path(flat)%>
                  <%= link_to "Edit", edit_flat_path(flat)%>
                  <%= link_to "Remove", flats_path(flat)%>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>


